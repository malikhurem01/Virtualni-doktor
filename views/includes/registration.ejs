<head>
  <meta charset="utf-8" />
  <meta
    name="viewport"
    content="width=device-width, initial-scale=1, shrink-to-fit=no"
  />
  <title>Registracija</title>

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;700&display=swap');
    body {
      font-family: 'Open Sans';
      font-weight: 400;
    }
    section.reg {
      height: 110vh;
      background-image: linear-gradient(
          to bottom,
          rgba(25, 29, 25, 0),
          rgba(255, 255, 255, 0.945)
        ),
        url(../img/gallery/gallery-7.jpg);
      background-attachment: fixed;
      background-repeat: no-repeat;
      background-size: cover;
      background-position: top;
      box-shadow: 0 2px 10px 2px rgb(187, 187, 187);
    }
    .login-form {
      width: 340px;
      margin: 0 auto;
      margin-top: 110px;
      font-size: 15px;
    }
    .login-form form {
      margin-bottom: 15px;
      background: #f7f7f7;
      box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
      padding: 30px;
    }
    .login-form h2 {
      margin: 0 0 15px;
    }
    .form-control,
    .btn {
      min-height: 38px;
      border-radius: 50px;
    }
    .btn {
      font-size: 15px;
      font-weight: bold;
    }
